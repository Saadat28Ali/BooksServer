{ 
    "version": 2, 
    "rewrites": [{ "source": "/(.*)", "destination": "/api/index.js" }], 
    "headers": [
        {
            "source": "/(.*)", 
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin", 
                    "value": "*"
                }, 
                {
                    "key": "Access-Control-Allow-Methods", 
                    "value": ["GET", "POST", "PATCH", "PUT", "OPTIONS", "DELETE"]
                }, 
                {
                    "key": "Access-Control-Allow-Headers", 
                    "value": ["Content-Type"]
                }
            ]
        }
    ], 

}