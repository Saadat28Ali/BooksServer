{ 
    "version": 2, 
    "routes": [
        {
            "src": "/(.*)",
            "dest": "./api",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "*", 
                "Access-Control-Allow-Methods": "GET,POST,PUT,PATCH,DELETE,OPTIONS", 
                "Access-Control-Allow-Headers": "Content-Type"
            }
        }
    ], 
    "functions": {
        "api/search.js": {
            "memory": 1024, 
            "maxDuration": 60
        }
    }

}